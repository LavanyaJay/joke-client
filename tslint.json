{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "rules": {
    "ordered-imports": false,
    "no-console": false,
    "interface-name": [true, "never-prefix"]
  },
  "jsRules": { "no-console": false },
  "no-shadowed-variable": [
    true,
    {
      "class": true,
      "enum": true,
      "function": true,
      "interface": false,
      "namespace": true,
      "typeAlias": false,
      "typeParameter": false
    }
  ]
}
